<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".checkout">


    <android.support.v7.widget.Toolbar
        android:id="@+id/checkout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorApp"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkout_toolbar"
        android:layout_margin="10dp"
        android:id="@+id/category_card"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_image_card"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:paddingTop="15dp"
            android:src="@drawable/example" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/check_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of work"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorApp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/check_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of work"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/check_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of work"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category_card"
        android:layout_margin="10dp"
        android:id="@+id/date_time_card"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:id="@+id/check_date"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:padding="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/ch_date"
                    android:background="@color/colorApp"
                    android:text="Choose Date"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250dp"
                    android:id="@+id/check_time"
                    android:layout_height="match_parent"
                    android:text="Time"
                    android:padding="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/ch_time"
                    android:background="@color/colorApp"
                    android:text="Choose Time"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_time_card"
        android:layout_margin="10dp"
        android:id="@+id/address_card"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/address1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address1"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textCursorDrawable="@color/colorApp"
                android:backgroundTint="@color/colorApp"/>

            <EditText
                android:id="@+id/address2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address2"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textCursorDrawable="@color/colorApp"
                android:backgroundTint="@color/colorApp" />

            <EditText
                android:id="@+id/address3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Address3"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textCursorDrawable="@color/colorApp"
                android:backgroundTint="@color/colorApp" />

        </LinearLayout>

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="133dp"
                android:layout_height="130dp"
                android:paddingTop="15dp"
                android:src="@drawable/address" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/book_button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/colorApp"
        android:text="Book" />

</RelativeLayout>